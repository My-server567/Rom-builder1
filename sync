#!/bin/bash
sudo apt install wget
MANIFEST=https://github.com/Corvus-ROM/android_manifest.git
BRANCH=10

mkdir -p /tmp/rom
cd /tmp/rom

# Repo init command, that -device,-mips,-darwin,-notdefault part will save you more time and storage to sync, add more according to your rom and choice.Optimization is welcomed! Let's make it quit, and with depth=1 so that no unnecessary things.
repo init --no-repo-verify --depth=1 -u "$MANIFEST" -b "$BRANCH" -g default,-device,-mips,-darwin,-notdefault
git config --global user.name " abhishek-r99 "
git config --global user.email "alex9960gr@gmail.com"

# Sync source with -q, no need unnecessary messages, you can remove -q if want! try with -j30 first, if fails, it will try again with -j8
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j16
pwd
ls

##delete these lines, and replace with your own lines of device sauce
git clone https://github.com/abhishek-r99/vendor_realme_r5x.git vendor/realme/r5x
git clone https://github.com/abhishek-r99/android_device_realme_r5x.git device/realme/r5x

cd /tmp/rom

rm -rf frameworks/av
git clone https://github.com/crdroidandroid/android_frameworks_av.git -b 10.0 frameworks/av

cd /tmp/rom
